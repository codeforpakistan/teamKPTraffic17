<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kptrafficpolice.trafficapp.fragments.ETest.PrepareYourself">


    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:elevation="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/total"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Handbook"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="18dp"
            />


    </android.support.v7.widget.CardView>




    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll"
        android:layout_below="@+id/card"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent">



        <LinearLayout
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:textStyle="bold"
                android:textSize="16dp"
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q1." />



            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:id="@+id/ques"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />



        </LinearLayout>



        <ImageView
            android:visibility="gone"
            android:id="@+id/img"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />





        <RelativeLayout
            android:layout_marginTop="5dp"
            android:id="@+id/relative_layout1"
            android:padding="10dp"
            android:background="@drawable/dotted_background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:padding="5dp"
                android:id="@+id/imageView1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:textSize="16sp"
                android:layout_marginEnd="10dp"
                android:id="@+id/op1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageView1"
                android:text="option 1"
                android:layout_marginRight="10dp"
                android:layout_alignParentLeft="true" />



        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/relative_layout2"
            android:padding="10dp"
            android:background="@drawable/dotted_background"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:padding="5dp"
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:layout_marginRight="10dp"
                android:id="@+id/op2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageView2"
                android:text="option 1"
                android:layout_alignParentLeft="true" />



        </RelativeLayout>





        <RelativeLayout
            android:id="@+id/relative_layout3"
            android:padding="10dp"
            android:background="@drawable/dotted_background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:padding="5dp"
                android:id="@+id/imageView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:layout_marginRight="10dp"
                android:id="@+id/op3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageView3"
                android:text="option 1"
                android:layout_alignParentLeft="true" />



        </RelativeLayout>





    </LinearLayout>



    <Button
        android:visibility="gone"
        android:text="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:id="@+id/btn1" />


    <Button
        android:visibility="gone"
        android:text="right"
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn1"
        android:layout_alignBottom="@+id/btn1"
        android:layout_alignEnd="@+id/card"
        android:layout_alignRight="@+id/card"
        android:gravity="end" />



    <LinearLayout
        android:visibility="visible"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ListView
            android:transcriptMode="normal"
            android:dividerHeight="2dp"
            android:padding="5dp"
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    </LinearLayout>



</RelativeLayout>
